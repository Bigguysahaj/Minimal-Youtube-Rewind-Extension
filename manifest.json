{
  "manifest_version": 3,
  "name": "True Youtube Rewind Extension",
  "description": "Adds a 2x rewind feature to youtube, because you don't want to watch the same 5 seconds over and over again.",
  "version": "0.1",
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon16.png",
      "128": "images/icon16.png"
    }
  }
}